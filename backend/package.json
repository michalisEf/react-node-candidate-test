{
  "name": "react-node-candidate-test-backend",
  "version": "1.2.5",
  "description": "A React and node.js pairing test to complete as part of the interview process for Totaljobs Group",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "body-parser": "^1.19.2",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "jest": "^27.5.1",
    "morgan": "^1.10.0",
    "typescript": "^4.6.2"
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "delay": 250,
    "execMap": {
      "ts": "node -r ts-node/register"
    },
    "ext": "js,json,ts",
    "restartable": "rs"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "nodemon": "^2.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0"
  }
}
